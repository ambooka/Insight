<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/portrait_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/toolbar_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/red"
            android:layout_width="20dp"
            android:layout_height="53dp"
            android:layout_weight="1"
            android:backgroundTint="@android:color/background_light"
            android:contentDescription="Red"
            app:srcCompat="@android:color/holo_red_dark" />

        <ImageButton
            android:id="@+id/green"
            android:layout_width="20dp"
            android:layout_height="53dp"
            android:layout_weight="1"
            android:backgroundTint="@android:color/background_light"
            android:contentDescription="Green"
            app:srcCompat="@android:color/holo_green_dark" />

        <ImageButton
            android:id="@+id/blue"
            android:layout_width="20dp"
            android:layout_height="53dp"
            android:layout_weight="1"
            android:backgroundTint="@android:color/background_light"
            android:contentDescription="Yellow"
            app:srcCompat="@android:color/holo_blue_dark"
            tools:visibility="visible" />

        <ImageButton
            android:id="@+id/line"
            android:layout_width="20dp"
            android:layout_height="53dp"
            android:layout_weight="1"
            android:backgroundTint="@android:color/background_light"
            android:contentDescription="Line"
            android:scaleType="centerInside"
            android:src="@drawable/ic_baseline_color_lens_24"
            tools:visibility="visible" />

        <ImageButton
            android:id="@+id/circle"
            android:layout_width="20dp"
            android:layout_height="53dp"
            android:layout_weight="1"
            android:backgroundTint="@android:color/background_light"
            android:contentDescription="Circle"
            android:scaleType="centerInside"
            android:src="@drawable/ic_launcher_foreground"
            tools:visibility="visible" />

        <ImageButton
            android:id="@+id/rect"
            android:layout_width="20dp"
            android:layout_height="53dp"
            android:layout_weight="1"
            android:background="@android:color/background_light"
            android:contentDescription="Rectangle"
            android:scaleType="centerInside"
            android:visibility="visible"
            android:src="@drawable/ic_add"
            tools:visibility="visible" />

        <ImageButton
            android:id="@+id/erase"
            android:layout_width="20dp"
            android:layout_height="53dp"
            android:layout_weight="1"
            android:background="@android:color/background_light"
            android:backgroundTint="@android:color/background_light"
            android:contentDescription="Erase"
            android:scaleType="centerInside"
            android:src="@drawable/ic_delete" />

        <ImageButton
            android:id="@+id/select"
            android:layout_width="20dp"
            android:layout_height="53dp"
            android:layout_weight="1"
            android:backgroundTint="@android:color/background_light"
            android:contentDescription="@android:string/selectAll"
            android:scaleType="centerInside"
            android:src="@drawable/ic_more" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/canvas_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" />

</LinearLayout>